{# src/RJSite/FrontBundle/Resources/views/layout.html.twig #}

{% extends "::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/rjplatform/css/styles.css') }}" media="screen" />
    <link href='https://fonts.googleapis.com/css?family=Dosis:400,700,600' rel='stylesheet' type='text/css'>
{% endblock %}
    
{% block title %}
    Site Ju & Ron {{ parent() }}
{% endblock %}

{% block body %}

    <div class="bg"></div>
    {{ render(controller("RJSiteFrontBundle:Page:mainmenu")) }}
    
    <div class="wrapper">
        {% block rjsite_default_body %}
        {% endblock %}
    </div>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/rjplatform/js/function.js') }}"></script>
{% endblock %}
