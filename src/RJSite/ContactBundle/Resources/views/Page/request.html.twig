{% extends "RJSiteFrontBundle::layout.html.twig" %}

{% block title %}
    Contactez-nous - {{ parent() }}
{% endblock %}

{% block rjsite_default_body %}
<div class="bg-color"></div>
<div class="wrapper">
    <div class="cart">
        <div>
            <img class="icon-images" src="{{ asset('bundles/rjplatform/images/icon-cart.svg') }}" width="50" height="50"/>
            <h2 class="title-desc semi-bold green mobile">AJOUTER AU PANIER</h2>
            <p class="regular white medium-font">Lorem ipsum dolor sit amet, <br/>consectetur adipisicing elit, sed do eiusmod<br/>tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>
    {{ form_start(form, {'attr': {'class': 'form-horizontal form-cart'}}) }}
    
    <div class="form-group">
{#         {{ form_label(form.object, "Object") }}#}
        {{ form_errors(form.object) }}
        {{ form_widget(form.object) }}
    </div>
    <div class="form-group">
{#         {{ form_label(form.email, "Email") }}#}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email) }}
    </div>
    <div class="form-group">
{#         {{ form_label(form.message, "Message") }}#}
        {{ form_errors(form.message) }}
        {{ form_widget(form.message) }}
    </div>
    
    {{ form_widget(form.save, {'attr': {'class': 'btn'}}) }}

{#     {{ form_rest(form) }}#}

    {{ form_end(form) }}

    {{ form(form) }}
    </div>
</div>   
{% endblock %}