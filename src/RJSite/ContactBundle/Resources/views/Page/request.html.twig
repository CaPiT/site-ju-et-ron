{# src/RJSite/ContactBundle/Resources/views/Page/request.html.twig #}

{% extends "RJSiteFrontBundle::layout.html.twig" %}

{% block title %}
    Contactez-nous - {{ parent() }}
{% endblock %}

{% block rjsite_default_body %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    
    <div class="form-group">
        {{ form_label(form.object, "Object") }}
        {{ form_errors(form.object) }}
        {{ form_widget(form.object) }}
    </div>
    <div class="form-group">
        {{ form_label(form.email, "Email") }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email) }}
    </div>
    <div class="form-group">
        {{ form_label(form.message, "Message") }}
        {{ form_errors(form.message) }}
        {{ form_widget(form.message) }}
    </div>
    
    {{ form_widget(form.save, {'attr': {'class': 'btn'}}) }}

{#     {{ form_rest(form) }}#}

    {{ form_end(form) }}

    {{ form(form) }}
    
{% endblock %}